                        <method>controller_front_init_before</method>
                    </ipbaseddevmode>
                </observers>
            </controller_front_init_before>
        </events-->
    </global>
    <frontend>
        <events>
            <controller_action_predispatch>
                <observers>
                    <ipbaseddevmode>
                        <class>ipbaseddevmode/observer</class>
                        <method>controller_action_predispatch</method>
                    </ipbaseddevmode>
                </observers>
            </controller_action_predispatch>
        </events>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <devmode>
