<?xml version="1.0"?>
<config>
    <modules>
        <Codewix_IpbasedDevmode>
            <version>0.1.0</version>
        </Codewix_IpbasedDevmode>
    </modules>
    <global>
        <models>
            <ipbaseddevmode>
                <class>Codewix_IpbasedDevmode_Model</class>
            </ipbaseddevmode>
        </models>
        <blocks>
            <ipbaseddevmode>
                <class>Codewix_IpbasedDevmode_Block</class>
            </ipbaseddevmode>
        </blocks>
        <helpers>
            <ipbaseddevmode>
                <class>Codewix_IpbasedDevmode_Helper</class>
            </ipbaseddevmode>
        </helpers>
